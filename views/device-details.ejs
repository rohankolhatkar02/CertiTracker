<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Employee Details</title>
</head>
<body>
    <h1><%= device.name %></h1>
    <form method="POST" action="/devices/<%= device.id %>">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= device.name %>" readonly>
      </div>
      <div class="form-group">
        <label for="certification">Certification</label>
        <input type="text" class="form-control" id="certification" name="certification" value="<%= device.certification %>" readonly>
      </div>
      <div class="form-group">
        <label for="planned">Planned</label>
        <input type="date" class="form-control" id="planned" name="planned" value="<%= device.planned ? device.planned.toISOString().substring(0, 10) : '' %>">
      </div>
      <div class="form-group">
        <label for="registered">Registered</label>
        <select class="form-control" id="registered" name="registered">
          <option value="">-Select-</option>
          <option value="yes" <%= device.registered === 'yes' ? 'selected' : '' %>>Yes</option>
          <option value="no" <%= device.registered === 'no' ? 'selected' : '' %>>No</option>
        </select>
      </div>
      <div class="form-group">
        <label for="cleared">Cleared</label>
        <select class="form-control" id="cleared" name="cleared">
          <option value="">-Select-</option>
          <option value="yes" <%= device.cleared === 'yes' ? 'selected' : '' %>>Yes</option>
          <option value="no" <%= device.cleared === 'no' ? 'selected' : '' %>>No</option>
        </select>
      </div>
      <div class="form-group">
        <label for="completed">Completed</label>
        <input type="date" class="form-control" id="completed" name="completed" value="<%= device.completed ? device.completed.toISOString().substring(0, 10) : '' %>">
      </div>
      <div class="form-group">
        <label for="comments">Comments</label>
        <textarea class="form-control" id="comments" name="comments" rows="3"><%= device.comments %></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Save</button>
    </form>
    <a href="/devices">Back to devices list</a>
    <script>
        const form = document.querySelector('form');
        const deviceId = '<%= device._id %>';
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            const data = new FormData(form);
            const payload = {};
            for (const [key, value] of data.entries()) {
                payload[key] = value;
            }
            const res = await fetch(`/devices/${deviceId}`, {
                method: 'post',
                body: JSON.stringify(payload),
                headers: {
                    'Content-Type': 'application/json'
                }
            });
            if (res.ok) {
               window.location.href = `/devices/${deviceId}`;
            }
        });
    </script>
    
    <style>
        @import url('https://fonts.googleapis.com/css?family=Open+Sans&display=swap');

body {
  font-family: 'Open Sans', sans-serif;
  background: #f9faff;
  color: #3a3c47;
  line-height: 1.6;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0;
  padding: 0;
}

h1 {
  margin-top: 48px;
}

form {
  background: #fff;
  max-width: 360px;
  width: 100%;
  padding: 58px 44px;
  border: 1px solid #e1e2f0;
  border-radius: 4px;
  box-shadow: 0 0 5px 0 rgba(42, 45, 48, 0.12);
  transition: all 0.3s ease;
}

.row {
  display: flex;
  flex-direction: column;
  margin-bottom: 20px;
}

.row label {
  font-size: 13px;
  color: #8086a9;
}

.row input {
  justify-content: center;
  flex: 1;
  padding: 13px;
  border: 1px solid #d6d8e6;
  border-radius: 4px;
  font-size: 16px;
  transition: all 0.2s ease-out;
}

.row input:focus {
  outline: none;
  box-shadow: inset 2px 2px 5px 0 rgba(42, 45, 48, 0.12);
}

.row input::placeholder {
  color: #C8CDDF;
}

button {
  width: 100%;
  padding: 12px;
  font-size: 18px;
  background: #15C39A;
  color: #fff;
  border: none;
  border-radius: 100px;
  cursor: pointer;
  font-family: 'Open Sans', sans-serif;
  margin-top: 15px;
  transition: background 0.2s ease-out;
}

button:hover {
  background: #55D3AC;
}

@media(max-width: 458px) {
  
  body {
    margin: 0 18px;
  }
  
  form {
    background: #f9faff;
    border: none;
    box-shadow: none;
    padding: 20px 0;
  }

}


    </style>
</body>
</html>
